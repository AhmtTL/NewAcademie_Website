# =============================================================================
# NY Empire Academy - Backend Environment Configuration
# =============================================================================
# Laravel 12 Application Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="NY Empire Academy"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default for development)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL/MariaDB (for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=nyea_production
# DB_USERNAME=nyea_user
# DB_PASSWORD=secure_password

# PostgreSQL (alternative for production)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=nyea_production
# DB_USERNAME=nyea_user
# DB_PASSWORD=secure_password

# =============================================================================
# SESSION & CACHE CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
# CACHE_PREFIX=

# =============================================================================
# QUEUE & BROADCASTING
# =============================================================================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# Redis Configuration (for production scaling)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# FILE STORAGE
# =============================================================================
FILESYSTEM_DISK=local

# AWS S3 (for production file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=nyea-storage
# AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@nyempireacademy.com"
MAIL_FROM_NAME="${APP_NAME}"

# Production SMTP (e.g., SendGrid, Mailgun)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key
# MAIL_ENCRYPTION=tls

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Webhook Configuration
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend URLs that can access the API
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=api/v1
API_RATE_LIMIT=60

# =============================================================================
# OAUTH/PASSPORT CONFIGURATION
# =============================================================================
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=

# =============================================================================
# AZURE DEPLOYMENT SPECIFIC
# =============================================================================
# Azure SQL Database (if using Azure SQL)
# DB_CONNECTION=sqlsrv
# DB_HOST=your-server.database.windows.net
# DB_PORT=1433
# DB_DATABASE=nyea_production
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# Azure Storage (if using Azure Blob Storage)
# AZURE_STORAGE_ACCOUNT=your_storage_account
# AZURE_STORAGE_KEY=your_storage_key
# AZURE_STORAGE_CONTAINER=uploads

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
VITE_APP_NAME="${APP_NAME}"

# Debugging
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (if using JWT authentication)
# JWT_SECRET=your_jwt_secret_key

# Additional security headers
SECURE_HEADERS=true
FORCE_HTTPS=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application Performance Monitoring
# SENTRY_LARAVEL_DSN=your_sentry_dsn

# Google Analytics
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
