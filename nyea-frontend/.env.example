# =============================================================================
# NY Empire Academy - Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# Configure these variables in your deployment platform for production

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
# Backend API Base URL - MUST be configured for each environment
# Development: http://localhost:8000/api/v1
# Staging: https://staging-admin.nyempireacademy.com/api/v1  
# Production: https://admin.nyempireacademy.com/api/v1
# Azure Production: https://your-azure-domain.com/api/v1
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1

# =============================================================================
# STRIPE CONFIGURATION (Required for payment features)
# =============================================================================
# Stripe Publishable Key - Use test keys for development, live keys for production
# Test: pk_test_...
# Live: pk_live_...
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Currency for payments (default: usd)
REACT_APP_CURRENCY=usd

# Stripe webhook endpoint (for backend webhook handling)
REACT_APP_STRIPE_WEBHOOK_ENDPOINT=/webhooks/stripe

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Application environment (automatically set by React)
# NODE_ENV=development|production

# Enable/disable debug features
# REACT_APP_DEBUG=false

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Analytics tracking ID (if using Google Analytics)
# REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Application version (for cache busting)
# REACT_APP_VERSION=1.0.0

# Feature flags
# REACT_APP_ENABLE_BETA_FEATURES=false
